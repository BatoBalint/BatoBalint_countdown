<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="100" prefHeight="100" prefWidth="300" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.countdown.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
         <children>
             <TextField maxWidth="150" prefWidth="150" promptText="yyyy/mm/dd hh:mm:ss" fx:id="dateTime">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
             </TextField>
             <Button fx:id="startBtn" mnemonicParsing="false" onAction="#startBtnClick" text="Indit" />
         </children>
      </HBox>
       <Label fx:id="timeLeftLbl" text="Test" />
   </children>
</VBox>
